<h4>Public::Posts#index</h4>


<div class="container-fluid">
<!--ここでのcontainerはコメント１個分をまとめている。
　　さらに大枠の箱を作れば、全体をまとめて中央揃えにできる。今はとりあえずoffsetで調整してある。-->
  <div class="mt-2">

    <div class="text-center">
      <div class="mb-3">
        <%= link_to '新着順', posts_path %>
        <%= link_to '古い順', posts_path(sort: 'old') %>
        <%= link_to 'いいね順', posts_path(sort: 'good') %>
      </div>


      <% @posts.each do |post| %>
        <div class="row">
          <div class="col-5 offset-3 border-bottom">
          <!--offsetの意味は左側をあけるという意味（今回はcol3個分）-->
            <div class="row">
              <div class="col-6">
                <%=time_ago_in_words(post.created_at)%>前
                <%#= @post.created_at.strftime('%Y/%m/%d') %>
              </div>
              <div class="col-6">
                <%= post.user.name %><br>
              </div>
            </div>
            <div class="row">
              <%= post.post_text %><br>
            </div>
            <div class="row">
              <div class="col-6">
                <% unless current_user.nil? %>
                  <% if post.favorited_by?(current_user) %>
                      <%= link_to post_favorites_path(post), method: :delete do %>
                        ♥<%= post.favorites.count %> いいね
                      <% end %>
                    <!--</p>-->
                    <% else %>
                    <!--<p>-->
                      <%= link_to post_favorites_path(post), method: :post do %>
                        ♡<%= post.favorites.count %> いいね
                      <% end %>
                    <!--</p>-->
                  <% end %>
                <% end %>

                <% if !current_user %>
                  ♥<%= post.favorites.count %> いいね
                <% end %>
              </div>
              <div class="col-6">
                コメント件数：<%= link_to post.comments.count, post_path(post.id) %>
              </div>
            </div>
          </div>


          <div class="col-2 border-bottom">
            <% if post.image.attached? %>
              <%= image_tag post.image, size: "80x100" %>
            <% else %>
              <%= image_tag 'no-image.jpg', size: "80x100" %>
            <% end %>
          </div>
        </div>

        <!--div class="border-bottom"></div-->
        <!--rowの中の一番下に書いてみたら、全く線は表示されなかった-->
      <% end %>

    </div>
  </div>
</div>

  <%= link_to "新規投稿", new_post_path %>
