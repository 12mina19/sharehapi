<div class="container-fluid">
  <div class="mt-4">

    <div class="text-center">
      <h4>会員情報編集画面</h4>

      <div>
        <%= form_with model: @user, url: admin_user_path, method: :patch do |f| %>

          <div class="row align-items-center justify-content-center">
            <div class="col-2 mt-3">
              <label for="id/admin">会員ID</label>
            </div>
            <div class="col-2">
              <%= @user.id %><br>
            </div>
          </div>

          <div class="row align-items-center justify-content-center">
            <div class="col-2">
              <label for="inputName/admin">名前</label>
            </div>
            <div class="col-2">
              <%= f.text_field :name, autofocus: true, :placeholder =>"#{@user.name}", id:"inputName/admin" %><br>
            </div>
          </div>

          <div class="row align-items-center justify-content-center">
            <div class="col-2">
              <label for="email/admin">メールアドレス</label>
            </div>
            <div class="col-2">
              <%= f.text_field :email, autofocus: true, :placeholder =>"#{@user.email}", id:"email/admin" %><br>
             </div>
          </div>

          <div class="row align-items-center justify-content-center">
            <div class="col-2">
              <label>ステータス</label>
            </div>
            <div class="col-2">
              <%= f.radio_button :is_deleted, "false" %>有効
              <%= f.radio_button :is_deleted, "true" %>退会<br>
            </div>
          </div>

          <div class="row align-items-center justify-content-center">
            <div class="col-2">
              <label>利用制限</label>
            </div>
            <div class="col-2">
              <%= f.radio_button :is_unpermitted, "false" %>無
              <%= f.radio_button :is_unpermitted, "true" %>利用停止<br>
            </div>
          </div>

          <%= f.submit '変更を保存', class: "btn btn-success mt-3" %>

        <% end %>
      </div>
    </div>


  </div>
</div>