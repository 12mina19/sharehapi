<div class="container-fluid">
  <div class="mt-4">


    <center>
      <h4>会員情報編集画面</h4>

        <%= form_with model: @user, url: admin_user_path, method: :patch do |f| %>


          <label for="id/admin">会員ID</label>
          <%= @user.id %><br>
          <!--<label for="inputName/admin">名前</label>-->
          <label for="inputName/admin">名前</label>
          <%= f.text_field :last_name, autofocus: true, :placeholder =>"#{@user.name}", id:"inputName/admin" %><br>
          <!--Qどうしてこれだけ灰色の文字？？-->
          <!--<label for="email/admin">メールアドレス</label>-->
          <label for="email/admin">メールアドレス</label>
          <%= f.text_field :email, autofocus: true, :placeholder =>"#{@user.email}", id:"email/admin" %><br>
          <label>ステータス</label>
          <%= f.radio_button :is_deleted, "false" %>有効
          <%= f.radio_button :is_deleted, "true" %>退会<br>
          <label>利用制限</label>
          <%= f.radio_button :is_unpermitted, "false" %>無
          <%= f.radio_button :is_unpermitted, "true" %>利用停止<br>

          <%= f.submit '変更を保存', class: "btn btn-success mt-3" %>

        <% end %>

    </center>

  </div>
</div>