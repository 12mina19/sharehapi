<h4>Admin::Users#show</h4>

<h2>会員詳細画面</h2>

<table>
  <tr>
    <th>会員ID</th>
    <td><%= @user.id %></td>
  </tr>
  <tr>
    <th>名前（ニックネーム）</th>
    <td><%= @user. name %></td>
  </tr>
  <tr>
    <th>メールアドレス</th>
    <td><%= @user.email %></td>
  </tr>
  <tr>
    <th>ステータス</th>
    <td>
      <% if @user.is_deleted? %>
        <font color="#a9a9a9">退会</font>
      <% else %>
        <font color="#32cd32">有効</font>
      <% end %>
    </td>
  </tr>
  <tr>
    <th>利用制限</th>
    <td>
      <% if @user.is_unpermitted? %>
        <font color="#ff2323">利用停止</font>
      <% else %>
        無
      <% end %>
    </td>
  </tr>
</table>

<%= link_to "編集する", edit_admin_user_path(@user.id) %>


