<h4>Admin::Categories#index</h4>

<h2>カテゴリー追加</h2>

<%= form_with model: @categories, url: admin_categories_path, method: :post do |f| %>
  <label for="categoryName">カテゴリー名</label>
  <%= f.text_field :name, autofocus: true, id:"categoryName", placeholder: "カテゴリー名", class: "ml-3" %>
  <!--Q．placeholderの上にCategoryが表示されている。何故？？？-->
  <%= f.submit '新規登録', class: "btn btn-success w-40 ml-5" %>
<% end %>


<table>
  <thead>
    <th>カテゴリー一覧</th>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
    <tr>
    　<th><%= category.name %></th>
    　<td><%= link_to "編集する", edit_admin_category_path(category.id), class: "btn btn-success ml-5" %></td>
      <td><%= link_to "削除", admin_category_path(category.id), method: :delete, class: "btn btn-success ml-5" %></td>
    </tr>

    <% end %>
  </tbody>
</table>