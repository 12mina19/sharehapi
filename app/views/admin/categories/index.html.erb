<center>
  <div class="mt-4 mb-4">
    <h4>カテゴリー追加</h4>
  </div>

<%= form_with model: @category, url: admin_categories_path, method: :post do |f| %>
  <label for="categoryName">カテゴリー名</label>
  <%= f.text_field :name, autofocus: true, id:"categoryName", placeholder: "カテゴリー名", class: "ml-3" %>
  <!--Q．placeholderの上にCategoryが表示されている。何故？？？-->
  <%= f.submit '新規登録', class: "btn btn-primary btn-sm w-40 ml-5" %>
<% end %>

<div class="row" style="width: 30%">
  <table class="table table-sm">
    <thead>
      <th colspan="3">カテゴリー一覧</th>
      <!--<th colspan="2"></th>-->
    </thead>

    <tbody>
      <% @categories.each do |category| %>
      <tr>
      　<th><%= category.name %></th>
      　<td><%= link_to "編集", edit_admin_category_path(category.id), class: "btn btn-success btn-sm ml-5" %></td>
        <td><%= link_to "削除", admin_category_path(category.id), method: :delete, class: "btn btn-danger btn-sm"%></td>
      </tr>

      <% end %>
    </tbody>
  </table>
</div>

</center>