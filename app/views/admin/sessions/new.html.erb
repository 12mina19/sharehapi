<div class="container-fluid">

  <center>
    <div class="mt-4">
    <h2>管理者：ログイン</h2>
    <%= image_tag('admin.jpg', size: "80x50") %>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field mt-3">
        <%= f.label :email, "メールアドレス" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", size: "30" %>
      </div>

      <div class="field mt-2">
        <%= f.label :password, "パスワード" %><br />
        <%= f.password_field :password, autocomplete: "current-password", size: "30" %>
      </div>

      <!--<%# if devise_mapping.rememberable? %>-->
      <!--  <div class="field">-->
      <!--    <%#= f.check_box :remember_me %>-->
      <!--    <%#= f.label :remember_me %>-->
      <!--  </div>-->
      <!--<%# end %>-->

      <div class="actions">
        <%= f.submit "ログイン", class: "btn btn-primary mt-3 btn-sm" %>
      </div>
    <% end %>
    </div>

    <%= render "admin/shared/links" %>
  </center>

</div>
